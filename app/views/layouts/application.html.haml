!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? "Task Manager | " + yield(:title) : "Task Manager"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    %link(href="favicon.ico" rel="shortcut icon")


  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          =link_to "TaskManager", root_path, class: "brand"
          .container.nav-collapse
            %ul.nav.pull-right
              %li= link_to "Users", users_path
              %li= link_to "Story", stories_path
              %li= link_to "Story Comments", story_comments_path
              -if signed_in?
                %li= link_to "Users", "#"
                %li.dropdown#fat-menu
                  %a(class="dropdown-toogle" data-toggle="dropdown" href="#")
                    Account
                    %b.caret
                  %ul.dropdown-menu
                    %li= link_to "Profile", current_user
                    %li= link_to "Settings", '#'
                    %li.divider
                    %li= link_to "Sign out", sign_out_path, method: "delete"
              -else
                %li= link_to "Sign in", sign_in_path
              
    .container

      .row
        .span9
          = bootstrap_flash
          = yield
        .span3
          .well.sidebar-nav
            %h3 Menu
            %ul.nav.nav-list
              %li.nav-header Menu
              %li= link_to "Users", users_path
              %li= link_to "Story", stories_path
              %li= link_to "Story Comments", story_comments_path
          .well.sidebar-nav
            %h3 Menu
            %ul.nav.nav-list
              %li.nav-header Menu
              %li= link_to "Users", users_path
              %li= link_to "Story", stories_path
              %li= link_to "Story Comments", story_comments_path
    
      %footer
        .container
          &copy; BestTaskManager 2013
          .pull-right
            = link_to "About", about_path
            = link_to "Contact", contacts_path
            = link_to "Help", help_path
          = debug(params) if Rails.env.development?
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"